<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_green_light"
    tools:context="mx.edu.utng.dialogosuno.MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast"
        android:id="@+id/btnToast"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Toast"
        android:id="@+id/lblToast"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/btnToast"
        android:layout_alignBaseline="@+id/btnToast"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Dialogo"
        android:id="@+id/btnDialogo"
        android:layout_below="@+id/btnToast"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Fragment"
        android:id="@+id/lblDialogo"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/btnDialogo"
        android:layout_alignBaseline="@id/btnDialogo"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Fecha"
        android:id="@+id/btnFecha"
        android:layout_below="@+id/btnDialogo"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con fecha"
        android:id="@+id/lblFecha"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/btnFecha"
        android:layout_alignBaseline="@id/btnFecha"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picDate"
        android:id="@+id/showDate"
        android:textSize="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picDate"
        android:onClick="datePicker"
        android:text="Pic Date"
        android:layout_below="@+id/btnFecha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
